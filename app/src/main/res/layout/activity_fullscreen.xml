<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="loadingState"
            type="String" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/fullscreenBackgroundColor"
        android:theme="@style/ThemeOverlay.Dogs.FullscreenContainer"
        tools:context=".FullscreenActivity">

        <LinearLayout
            android:id="@+id/fullscreenContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:lottie_rawRes="@raw/dog_white"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                />
            <LinearLayout
                android:id="@+id/linearLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:animateLayoutChanges="true"
                >
                <app.m4ntis.blinkingloader.BlinkingLoader
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:auto_start="true"
                    app:dot_blinkingColor="@color/white"
                    app:dot_margin="2dp"
                    app:dot_neutralColor="@color/white_alpha_48"
                    app:dot_num_dots="5"
                    />
                <TextView
                    android:id="@+id/textLoading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:text="@{loadingState}"
                    tools:text="Dog Api Demo"
                    />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/buttonRefresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    fancy:fb_defaultColor="@color/white"
                    fancy:fb_focusColor="@color/white_alpha_64"
                    fancy:fb_fontIconResource="&#xf01e;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="REFRESH"
                    fancy:fb_textColor="?attr/fullscreenBackgroundColor"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</layout>